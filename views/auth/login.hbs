<div class="body-cont">
  <div id="signupForm">
    <h1>Log in</h1>


<form action="/auth/login" method='POST' id="form">

  <label for="username">Username:</label>
  <input type="text" name="username" id="username" class="textboxid" required/>

  <label for="password">Password:</label>
  <input type="password" name="password" id="password" class="textboxid" required />

  <button type="submit">Log in</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}
  </div>

</div>