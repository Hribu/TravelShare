<div class="body-cont">

  <div id="signupForm">
    <h1>Sign up </h1>

    <form action="/auth/signup" method="POST" id="form">

      
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" class="textboxid" required />
      

        <label for="email">Email:</label>
        <input type="email" name="email"  class="textboxid" required />

     
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" class="textboxid" required />
      

      <div id="signupButon">
        <button type="submit">Sign up</button>
      </div>
    </form>

    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </div>
</div>